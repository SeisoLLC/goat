{
    "filters": {
        "comments": true
    },
    "rules": {
        "terminology": {
            "defaultTerms": true,
            "terms": [
                {
                    "name": "Docker",
                    "ignoreCase": true,
                    "preferred": "Docker",
                    "from": "\\bdocker\\b"
                }
            ],
            "skip": [
                {
                    "pattern": "`[^`]*`",
                    "flags": "g"
                },
                {
                    "pattern": "```[\\s\\S]*?```",
                    "flags": "g"
                }
            ]
        }
    }
}